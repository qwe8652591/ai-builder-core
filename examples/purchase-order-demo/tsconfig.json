{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@qwe8652591/dsl-core",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@qwe8652591/std-ui": ["../../packages/std-ui/src/index.ts"],
      "@qwe8652591/std-ui/*": ["../../packages/std-ui/src/*"],
      "@qwe8652591/dsl-core": ["../../packages/dsl-core/src/index.ts"],
      "@qwe8652591/dsl-core/*": ["../../packages/dsl-core/src/*"]
    }
  },
  "include": [
    "src",
    "dsl.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
